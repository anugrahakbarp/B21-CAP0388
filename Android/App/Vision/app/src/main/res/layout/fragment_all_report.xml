<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_700"
    tools:context=".ui.allReport.AllReportFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabStatusAllReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_500"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="@color/white"
        app:tabRippleColor="@color/label"
        app:tabTextColor="@color/white" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pagerAllReport"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tabStatusAllReport" />

</androidx.constraintlayout.widget.ConstraintLayout>